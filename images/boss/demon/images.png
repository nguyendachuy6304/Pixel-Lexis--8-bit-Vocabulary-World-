<svg viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
  <!-- Demon Boss - 8-bit Pixel Art -->
  <style>
    .pixel { shape-rendering: crispEdges; }
  </style>
  
  <!-- Background -->
  <rect width="256" height="256" fill="#1a1a2e"/>
  
  <!-- Demon Head -->
  <rect class="pixel" x="80" y="20" width="96" height="96" fill="#8b1a1a"/>
  <!-- Eyes -->
  <rect class="pixel" x="100" y="40" width="16" height="20" fill="#ffeb3b"/>
  <rect class="pixel" x="140" y="40" width="16" height="20" fill="#ffeb3b"/>
  <!-- Horns -->
  <polygon class="pixel" points="80,20 70,0 85,25" fill="#d32f2f"/>
  <polygon class="pixel" points="176,20 186,0 171,25" fill="#d32f2f"/>
  <!-- Mouth -->
  <rect class="pixel" x="110" y="75" width="36" height="12" fill="#ffcccc"/>
  <!-- Teeth -->
  <rect class="pixel" x="110" y="75" width="4" height="12" fill="#000"/>
  <rect class="pixel" x="120" y="75" width="4" height="12" fill="#000"/>
  <rect class="pixel" x="130" y="75" width="4" height="12" fill="#000"/>
  <rect class="pixel" x="140" y="75" width="4" height="12" fill="#000"/>
  
  <!-- Demon Body -->
  <rect class="pixel" x="60" y="110" width="136" height="80" fill="#4a148c"/>
  <!-- Armor Lines -->
  <line class="pixel" x1="60" y1="130" x2="196" y2="130" stroke="#7b1fa2" stroke-width="4"/>
  <line class="pixel" x1="60" y1="155" x2="196" y2="155" stroke="#7b1fa2" stroke-width="4"/>
  
  <!-- Arms -->
  <rect class="pixel" x="20" y="125" width="40" height="60" fill="#6a1b9a"/>
  <rect class="pixel" x="196" y="125" width="40" height="60" fill="#6a1b9a"/>
  <!-- Hand -->
  <rect class="pixel" x="10" y="180" width="20" height="20" fill="#8b1a1a"/>
  <rect class="pixel" x="226" y="180" width="20" height="20" fill="#8b1a1a"/>
  
  <!-- Legs -->
  <rect class="pixel" x="90" y="190" width="32" height="50" fill="#2c0845"/>
  <rect class="pixel" x="134" y="190" width="32" height="50" fill="#2c0845"/>
  
  <!-- Wings -->
  <polygon class="pixel" points="60,120 30,100 50,140" fill="#8b1a1a" opacity="0.8"/>
  <polygon class="pixel" points="196,120 226,100 206,140" fill="#8b1a1a" opacity="0.8"/>
</svg>