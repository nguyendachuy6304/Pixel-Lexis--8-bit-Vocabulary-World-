<svg viewBox="0 0 256 256" xmlns="http://www.w3.org/2000/svg">
  <!-- Zombie Boss - 8-bit Pixel Art -->
  <style>
    .pixel { shape-rendering: crispEdges; }
  </style>
  
  <!-- Background -->
  <rect width="256" height="256" fill="#1a2c1a"/>
  
  <!-- Head -->
  <rect class="pixel" x="80" y="20" width="96" height="80" fill="#6b8e23"/>
  <!-- Left Eye (Zombie) -->
  <rect class="pixel" x="100" y="40" width="16" height="16" fill="#000"/>
  <rect class="pixel" x="104" y="44" width="8" height="8" fill="#ff0000"/>
  <!-- Right Eye Missing -->
  <rect class="pixel" x="140" y="40" width="16" height="20" fill="#000"/>
  <!-- Mouth (Gaping) -->
  <rect class="pixel" x="100" y="75" width="56" height="12" fill="#000"/>
  <rect class="pixel" x="105" y="78" width="46" height="4" fill="#4a4a4a"/>
  
  <!-- Zombie Body (Tattered) -->
  <rect class="pixel" x="60" y="105" width="136" height="85" fill="#556b2f"/>
  <!-- Torn Shirt -->
  <polygon class="pixel" points="80,105 100,130 70,130" fill="#4a4a4a"/>
  <polygon class="pixel" points="176,105 156,130 186,130" fill="#4a4a4a"/>
  
  <!-- Arms (Decomposed) -->
  <rect class="pixel" x="15" y="130" width="50" height="50" fill="#6b8e23"/>
  <rect class="pixel" x="191" y="130" width="50" height="50" fill="#6b8e23"/>
  <!-- Hands -->
  <rect class="pixel" x="8" y="175" width="16" height="20" fill="#556b2f"/>
  <rect class="pixel" x="232" y="175" width="16" height="20" fill="#556b2f"/>
  
  <!-- Legs -->
  <rect class="pixel" x="90" y="190" width="32" height="50" fill="#3d5a1f"/>
  <rect class="pixel" x="134" y="190" width="32" height="50" fill="#3d5a1f"/>
  
  <!-- Dirt/Gore -->
  <circle class="pixel" cx="120" cy="150" r="8" fill="#4a4a4a" opacity="0.6"/>
  <circle class="pixel" cx="140" cy="160" r="6" fill="#4a4a4a" opacity="0.6"/>
  <circle class="pixel" cx="100" cy="170" r="5" fill="#4a4a4a" opacity="0.6"/>
</svg>